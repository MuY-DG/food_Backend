<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <!-- Logging is handled by SLF4J/Logback -->
        <setting name="logImpl" value="SLF4J"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <!-- Consider enabling second-level cache globally if appropriate -->
        <!-- <setting name="cacheEnabled" value="true"/> -->
        <!-- Consider enabling lazy loading if appropriate -->
        <!-- <setting name="lazyLoadingEnabled" value="true"/> -->
        <!-- <setting name="aggressiveLazyLoading" value="false"/> -->
    </settings>

    <typeAliases>
        <package name="com.muybaby.food.bean"/>
        <package name="com.muybaby.food.dto"/> <!-- Scan DTOs as well if used in mappers -->
    </typeAliases>

</configuration>